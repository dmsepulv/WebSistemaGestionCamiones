        <navigation-case>
            <from-outcome>encontrado</from-outcome>
            <to-view-id>/View/MantenedorChofer/SeleccionPedido.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>eliminado</from-outcome>
            <to-view-id>/View/MantenedorChofer/MostrarPedidos.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>guardado</from-outcome>
            <to-view-id>/View/MantenedorChofer/MostrarPedidos.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>actualizado</from-outcome>
            <to-view-id>/View/MantenedorChofer/MostrarPedidos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/View/MantenedorUsuario/*</from-view-id>
        <navigation-case>
            <from-outcome>encontrado</from-outcome>
            <to-view-id>/View/MantenedorUsuario/SeleccionUsuario.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>eliminado</from-outcome>
